<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020728"
    android:backgroundTint="#050B2E"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="408dp"
        android:layout_height="602dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:srcCompat="@drawable/test" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonjour \nConnectez-vous !"
        android:textColor="#CEC6C6"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <LinearLayout
        android:layout_width="491dp"
        android:layout_height="550dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Email"
            android:textColor="#090E42"
            android:textSize="26dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:drawableEnd="@drawable/done_icone"
            android:ems="10"
            android:hint="wided.benyaagoub@isimg.tn"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="ID "
            android:textColor="#090E42"
            android:textSize="26dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editTextText1"
            android:layout_width="334dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:drawableEnd="@drawable/visibilite_off"
            android:ems="10"
            android:hint="5874"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="168dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="75dp"
                android:layout_marginEnd="116dp"
                android:gravity="end"
                android:text="Mot de passe oubliÃ© ?"
                android:textColor="#090E42"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mon_bouton"
                android:layout_width="267dp"
                android:layout_height="84dp"
                android:layout_below="@id/textView5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="108dp"
                android:backgroundTint="#090E42"
                android:stateListAnimator="@null"
                android:text="Confirmer"
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="348dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="120dp"
                android:gravity="end"
                android:text="Vous n'avez pas de compte ?"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="113dp"
                android:gravity="end"
                android:text="Inscription"
                android:textColor="#163F61"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>